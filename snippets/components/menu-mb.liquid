<div class="header__menu" id="header__menu">
  <button class="btn__close" id="btn__close">
    {% render 'icons/icon-close' %}
  </button>
  <div class="header__menu--card">
    <div class="header__container--type-05">
      <a href="" class="btn__link">All Products</a>
      <a href="" class="btn__link">Collections</a>
    </div>
    <!-- Cabecera principal -->
    {% include 'components/coins-mb' %}
  </div>
</div>

<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', function () {
    const btnMenu = document.querySelector('#btn__menu');
    const headerMenu = document.querySelector('#header__menu');
    const btnClose = document.querySelector('#btn__close');

    btnMenu.addEventListener('click', () => {
      headerMenu.classList.add('active');
      btnMenu.classList.add('active');
    });

    btnClose.addEventListener('click', () => {
      headerMenu.classList.remove('active');
      headerMenu.classList.add('close');
      btnMenu.classList.remove('active');
    });
  });
</script>
