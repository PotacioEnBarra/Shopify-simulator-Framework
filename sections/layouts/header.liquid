<header class="header__content">
  <div class="header__container">
    <div class="header__container--type-01">
      <!-- Botón de menú, con animación de entrada -->
      <button class="btn__menu wow animate__animated animate__fadeInUp" data-wow-duration="0.6s" id="btn__menu">
        {% render 'icons/icon-menu' %}
      </button>
      <!-- Contenedor de la sección de logo y texto del sitio -->
      <div class="header__btn--type-01">
        <!-- Enlace con el logo y nombre de la tienda -->
        <a href="#" class="btn__secondary">
          <div class="header__svg wow animate__animated animate__fadeInUp" data-wow-duration="0.6s">
            {% render 'icons/icon-logo-header' %}
          </div>
          <p class="btn__secondary text-secondary wow animate__animated animate__fadeInUp" data-wow-duration="0.6s">
            SHUFFLE
          </p>
          <!-- Separador visual entre nombre y sección -->
          <p class="btn__secondary separator wow animate__animated animate__fadeInUp" data-wow-duration="0.6s">|</p>
          <p class="btn__secondary text wow animate__animated animate__fadeInUp" data-wow-duration="0.6s">STORE</p>
        </a>
      </div>
    </div>
    <!-- Inclusión de componente de monedas disponibles -->
    {% include 'components/coins' %}

    <div class="header__container--type-02">
      <div class="header__container--type-04">
        <!-- Enlaces de navegación (productos y colecciones) -->
        <a href="" class="btn__link wow animate__animated animate__fadeInUp" data-wow-duration="0.6s">All Products</a>
        <a href="" class="btn__link wow animate__animated animate__fadeInUp" data-wow-duration="0.6s">Collections</a>
      </div>
      <!-- Botón de acceso al mercado, con icono animado -->
      <button class="btn__market wow animate__animated animate__fadeInUp" data-wow-duration="0.6s">
        {% render 'icons/icon-market-header' %}
      </button>
    </div>
  </div>
</header>

<!-- Inclusión de menú móvil (visible solo en dispositivos móviles) -->
{% include 'components/menu-mb' %}
