<main class="main-content" id="main-content">
  <div class="main-content__container">
    <img src="/assets/hero_banner_img.avif" width="100%" height="100%" alt="image-banner" class="wow animate__animated animate__fadeInUp" data-wow-duration="0.4s">
    <div class="main-content__btn">
      <a href="{{ settings['hero-banner'].settings.button_link }}" class="btn__primary wow animate__animated animate__fadeInLeft" data-wow-duration="0.8s">
        {{- settings['hero-banner'].settings.button_text | upcase -}}
      </a>
    </div>
  </div>
</main>

{% render 'marquee', marquee_text: settings['hero-banner'].settings.marquee_text %}
