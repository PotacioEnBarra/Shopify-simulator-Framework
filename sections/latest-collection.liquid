<section class="latest-collection">
  <div class="latest-collection__container">
    <div class="latest-collection__container--type-01">
      <!-- Íconos y texto que indican la sección "Última Colección" -->
      {% render 'icons/icon-diamond-2' %}
      <p class="latest-collection__text--type-01 wow animate__animated animate__fadeInUp" data-wow-duration="0.4s">
        LATEST COLLECTION
      </p>
      {% render 'icons/icon-diamond-2' %}
    </div>

    <div class="latest-collection__container--type-02">
      <!-- Iteración sobre las colecciones -->
      {% for data in collections %}
        {% assign reference_date = '2025-01-01' | date: '%s' %}
        {% assign collection_date = data.created_at | date: '%s' %}
        <!-- Filtrar colecciones basadas en la fecha -->
        {% if collection_date >= reference_date %}
          <div class="latest-collection__card">
            <!-- Imagen de la colección -->
            <img
              src="assets/{{ data.image }}"
              alt="{{ data.title }}"
              class="latest-collection__img wow animate__animated animate__fadeInUp"
              data-wow-duration="0.6s"
              width="100%"
              height="100%"
            >
            <!-- Título de la colección -->
            <p
              class="latest-collection__text--type-02 wow animate__animated animate__fadeInUp"
              data-wow-duration="0.8s"
            >
              {{ data.title }}
            </p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
